# Environment Variables Example
# Copy this file to .env and fill in your actual values

# Boson AI API Configuration
BOSON_API_KEY=your_api_key_here
BOSON_BASE_URL=https://hackathon.boson.ai/v1

# Audio Configuration
AUDIO_SAMPLE_RATE=24000
PTT_SECONDS=2.5
TTS_VOICE=belinda

# Intent Processing
USE_LLM_FALLBACK=false

# Car Hardware Configuration (for later phases)
CAR_SERIAL_PORT=/dev/ttyUSB0
CAR_BAUD_RATE=115200

# Debug Settings
DEBUG_MODE=false
LOG_LEVEL=INFO

# Lightning McBeam Custom Voice Configuration
# UPDATE THESE with your actual audio file and transcript!
MCBEAM_REFERENCE_AUDIO=ref-audio/lightning_mcbeam_reference.wav
MCBEAM_REFERENCE_TRANSCRIPT=[SPEAKER1]I'm Lightning McBeam! Speed is my middle name, and I'm here to take you wherever you need to go. Kachow!
